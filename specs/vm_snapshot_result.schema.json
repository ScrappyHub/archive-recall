{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Archive Recall VM Snapshot Result",
  "type": "object",
  "required": [
    "schema_version",
    "result_id",
    "request_id",
    "provider_id",
    "provider_kind",
    "target",
    "action",
    "status",
    "occurred_at_utc",
    "provider_snapshot_id"
  ],
  "properties": {
    "schema_version": { "type": "string", "enum": ["v1"] },
    "result_id": { "type": "string", "minLength": 8, "maxLength": 128 },
    "request_id": { "type": "string", "minLength": 8, "maxLength": 128 },
    "provider_id": { "type": "string", "minLength": 1, "maxLength": 128 },
    "provider_kind": { "type": "string", "enum": ["virtualbox", "hyperv", "vmware", "qemu", "other"] },
    "target": {
      "type": "object",
      "required": ["vm_id"],
      "properties": {
        "vm_id": { "type": "string", "minLength": 1, "maxLength": 256 },
        "vm_name": { "type": "string", "minLength": 1, "maxLength": 256 }
      },
      "additionalProperties": false
    },
    "action": { "type": "string", "enum": ["created", "restored", "exported"] },
    "status": { "type": "string", "enum": ["ok", "failed"] },
    "occurred_at_utc": { "type": "string", "format": "date-time" },
    "provider_snapshot_id": { "type": "string", "minLength": 1, "maxLength": 512 },
    "determinism_class": { "type": "string", "enum": ["D0", "D1", "D2"] },
    "exported_artifact_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "notes": { "type": "string", "maxLength": 2000 },
    "error": {
      "type": "object",
      "properties": {
        "code": { "type": "string", "minLength": 1, "maxLength": 128 },
        "message": { "type": "string", "minLength": 1, "maxLength": 2000 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
