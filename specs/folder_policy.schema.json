{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Archive Recall Folder Policy",
  "type": "object",
  "required": ["schema_version", "policy_id", "scope", "allowed_types", "enforcement", "transforms"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["v1"] },
    "policy_id": { "type": "string", "minLength": 8, "maxLength": 128 },
    "scope": {
      "type": "object",
      "required": ["path", "recursive"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "recursive": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "allowed_types": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["data_type", "match"],
        "properties": {
          "data_type": {
            "type": "string",
            "enum": ["music", "image", "rom", "save", "video", "document", "software", "archive", "unknown"]
          },
          "match": {
            "type": "object",
            "required": ["extensions"],
            "properties": {
              "extensions": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "mime_prefixes": { "type": "array", "items": { "type": "string", "minLength": 1 } }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "enforcement": {
      "type": "object",
      "required": ["mode", "on_disallowed"],
      "properties": {
        "mode": { "type": "string", "enum": ["warn", "block", "isolate", "transform"] },
        "on_disallowed": { "type": "string", "enum": ["reject", "quarantine", "isolate"] }
      },
      "additionalProperties": false
    },
    "transforms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["transformer_name", "transformer_version", "params"],
        "properties": {
          "transformer_name": { "type": "string", "minLength": 1 },
          "transformer_version": { "type": "string", "minLength": 1 },
          "params": { "type": "object" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
