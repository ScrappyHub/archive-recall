{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Archive Recall Health Report",
  "type": "object",
  "required": ["schema_version", "report_id", "generated_at_utc", "items"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["v1"] },
    "report_id": { "type": "string", "minLength": 8, "maxLength": 128 },
    "generated_at_utc": { "type": "string", "format": "date-time" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sha256", "status", "signals"],
        "properties": {
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "status": { "type": "string", "enum": ["CLEAN", "NEEDS_ATTENTION", "MAINTENANCE_REQUIRED", "QUARANTINED", "UNSUPPORTED"] },
          "signals": { "type": "array", "items": { "type": "string", "minLength": 1 } }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
