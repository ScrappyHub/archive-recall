{
  "schema_version": "v1",
  "policy_id": "fp_music_only_v1_20260131",
  "scope": { "path": "D:\\Library\\Music", "recursive": true },
  "allowed_types": [
    { "data_type": "music", "match": { "extensions": [".mp3", ".flac", ".wav", ".m4a"], "mime_prefixes": ["audio/"] } }
